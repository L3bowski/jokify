{
    "name": "jokify",
    "version": "1.0.0",
    "description": "Cheer up your day with spanish random jokes",
    "main": "index.js",
    "scripts": {
        "build": "npm run clean:build && webpack --mode production",
        "clean:build": "rm -rf dist",
        "clean:dependencies": "rm -rf node_modules/ package-lock.json",
        "lint": "tslint -e 'node_modules/**' -p .",
        "lint:fix": "tslint -e 'node_modules/**' -p . --fix",
        "prettier": "prettier --list-different \"src/**/*.ts\"",
        "prettier:fix": "prettier --write \"src/**/*.ts\"",
        "start": "node index.js",
        "start:dev": "webpack-dev-server --open --mode development"
    },
    "author": "Carles Capellas <capellas.carles@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "express": "4.17.1",
        "jquery": "2.1.1"
    },
    "devDependencies": {
        "@types/jquery": "3.3.31",
        "awesome-typescript-loader": "5.2.1",
        "copy-webpack-plugin": "5.1.1",
        "css-loader": "3.4.1",
        "html-loader": "0.5.5",
        "html-webpack-plugin": "3.2.0",
        "husky": "4.0.0",
        "node-sass": "4.12.0",
        "prettier": "1.19.1",
        "sass-loader": "8.0.0",
        "style-loader": "1.1.2",
        "tslint": "5.20.1",
        "tslint-config-prettier": "1.18.0",
        "typescript": "3.7.4",
        "webpack": "4.41.5",
        "webpack-cli": "3.3.10",
        "webpack-dev-server": "3.10.1"
    },
    "husky": {
        "pre-commit": "npm lint && npm run prettier"
    }
}
